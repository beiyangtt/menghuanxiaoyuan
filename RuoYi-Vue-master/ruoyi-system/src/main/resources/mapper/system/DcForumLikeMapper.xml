<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.DcForumLikeMapper">
    
    <resultMap type="DcForumLike" id="DcForumLikeResult">
        <result property="likeId"          column="like_id"          />
        <result property="userId"          column="user_id"          />
        <result property="targetType"      column="target_type"      />
        <result property="targetId"       column="target_id"         />
        <result property="createTime"     column="create_time"       />
    </resultMap>

    <select id="selectDcForumLike" resultMap="DcForumLikeResult">
        select like_id, user_id, target_type, target_id, create_time
        from dc_forum_like
        where user_id = #{userId} and target_type = #{targetType} and target_id = #{targetId}
    </select>
    
    <insert id="insertDcForumLike" parameterType="DcForumLike">
        insert into dc_forum_like
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="targetType != null and targetType != ''">target_type,</if>
            <if test="targetId != null">target_id,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="targetType != null and targetType != ''">#{targetType},</if>
            <if test="targetId != null">#{targetId},</if>
            sysdate()
         </trim>
    </insert>

    <delete id="deleteDcForumLike">
        delete from dc_forum_like
        where user_id = #{userId} and target_type = #{targetType} and target_id = #{targetId}
    </delete>

</mapper>

